{
  "permissions": {
    "allow": [
      "Bash",
      "WebSearch",
      "Write",
      "Update",
      "Edit"
    ],
    "deny": [],
    "ask": []
  },
  "model": "sonnet",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR\\.claude\\hooks\\bash_hook.py\"",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\\.claude\\hooks\\venv_activator.sh\"",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR\\.claude\\hooks\\file_size_conditional_hook.py\"",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR\\.claude\\hooks\\pretask_subtask_flag.py\"",
            "timeout": 2000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR\\.claude\\hooks\\posttask_subtask_flag.py\"",
            "timeout": 2000
          }
        ]
      }
    ]
  }
}
